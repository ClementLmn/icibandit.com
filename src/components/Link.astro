---
import { storyblokEditable } from "@storyblok/astro";
import { Icon } from "astro-icon/components";

import SBLink from "./SBLink.astro";

const { blok, class: className } = Astro.props;
---

<SBLink
    {...storyblokEditable(blok)}
    class={`${className} group flex gap-24 items-start`}
    link={blok.lien}
>
    {blok.texte}
    <Icon
        name="arrow"
        class="group-hover:ease-bounce mr-25 h-auto w-53 shrink-0 origin-left scale-x-0 transition-transform duration-100 ease-in-out group-hover:scale-x-100 group-hover:duration-200"
    />
</SBLink>
