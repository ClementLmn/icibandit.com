---
import SBImage from "../SBImage.astro";
import SBLink from "../SBLink.astro";

import { hasRichTextContent } from "../../utils/richtext";
import { renderRichText } from "@storyblok/astro";

const { blok } = Astro.props;
---

<div class="bg-yellow container-main pt-30 pb-210">
    <div class="flex items-center justify-end">
        <div class="flex items-center gap-40 pr-25">
            <a
                class="text-[1.4rem] font-bold uppercase"
                href={`mailto:${blok.email}`}>{blok.email}</a
            >
            {
                blok.liens_icones.map((lien: any) => (
                    <SBLink link={lien.lien}>
                        <SBImage class="size-20" image={lien.icone} />
                    </SBLink>
                ))
            }
        </div>
    </div>
    <div class="mx-auto flex w-10/12 flex-col items-center justify-center">
        <SBImage class="w-9/10 self-start" image={blok.gros_logo} />
        {
            hasRichTextContent(blok.tagline) && (
                <div class="flex items-center">
                    <svg
                        class="-mr-10 h-118 w-39"
                        viewBox="0 0 39 118"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                    >
