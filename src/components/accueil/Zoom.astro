---
import Link from "../Link.astro";
import SBImage from "../SBImage.astro";

import { hasRichTextContent } from "../../utils/richtext";
import { renderRichText, type SbBlokData } from "@storyblok/astro";

const { blok } = Astro.props;

const textColors = {
    white: "var(--color-white)",
    black: "var(--color-black)",
};
---

<div
    class="container-main px-gutter bg-(--zoom-bg-color) bg-[url('/src/assets/grid.svg')] bg-size-[1440px] bg-top bg-repeat pt-110 pb-120 text-(--zoom-text-color) md:pb-210 2xl:bg-size-[100%]"
    style={{
        "--zoom-bg-color": blok.background_color_zoom.color,
        "--zoom-title-color": blok.title_color_zoom.color,
        "--zoom-text-color":
            textColors[blok.text_color_zoom as keyof typeof textColors] || "--color-black",
    }}
>
    <div class="mx-auto w-full lg:w-10/12">
        <div class="flex w-full flex-col md:flex-row">
            <div class="px-gutter w-full md:w-6/10">
                {
                    blok.titre_zoom && (
                        <h2 class="font-lato mb-32 text-[3.8rem] leading-46 font-bold md:mb-0 md:text-[5.4rem] md:leading-65">
                            {blok.titre_zoom}
                        </h2>
                    )
                }
                {
                    blok.sous_titre_zoom && (
                        <p class="font-schoolbell inline-block rotate-2 text-[3.4rem] leading-37 text-(--zoom-title-color) md:text-[4.4rem] md:leading-61">
                            {blok.sous_titre_zoom}
                        </p>
                    )
                }
            </div>
            <div class="px-gutter w-full pt-20 md:w-4/10 md:pt-70">
                {
                    blok.description_zoom && (
                        <div class="text-[2.8rem]leading-34 font-medium">
                            {blok.description_zoom}
                        </div>
                    )
                }
                {
                    blok.lien_zoom && blok.lien_zoom[0] && (
                        <Link
                            class="mt-30 inline-block text-[1.8rem] leading-22 font-semibold uppercase"
                            blok={blok.lien_zoom[0]}
                        />
                    )
                }
            </div>
        </div>
        <div class="mt-36 flex w-full flex-col items-end md:-mt-70 md:flex-row">
            {
                blok.image_1_zoom && (
                    <div class="px-gutter w-full md:h-450 md:w-6/10 md:shrink-0 md:px-40">
                        <SBImage
                            class="size-full rotate-2 border-2 border-black object-cover"
                            image={blok.image_1_zoom}
                        />
                    </div>
                )
            }
            {
                blok.image_2_zoom && (
                    <div class="px-gutter w-full md:ml-[-10%] md:h-390 md:w-5/10 md:shrink-0">
                        <SBImage
                            class="mt-40 size-full -rotate-2 border-2 border-black object-cover md:mt-70"
                            image={blok.image_2_zoom}
                        />
                    </div>
                )
            }
        </div>
    </div>
</div>
