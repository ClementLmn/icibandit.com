---
import Link from "../Link.astro";
import SBImage from "../SBImage.astro";

import { hasRichTextContent } from "../../utils/richtext";
import { renderRichText, type SbBlokData } from "@storyblok/astro";

const { blok } = Astro.props;

const textColors = {
    white: "var(--color-white)",
    black: "var(--color-black)",
};
---

<div
    class="container-main bg-(--zoom-bg-color) pt-110 pb-210 text-(--zoom-text-color)"
    style={{
        "--zoom-bg-color": blok.background_color_zoom.color,
        "--zoom-title-color": blok.title_color_zoom.color,
        "--zoom-text-color":
            textColors[blok.text_color_zoom as keyof typeof textColors] ||
            "--color-black",
    }}
>
    <div class="mx-auto w-10/12">
        <div class="flex w-full">
            <div class="px-gutter w-6/10">
                {
                    blok.titre_zoom && (
                        <h2 class="font-lato text-[5.4rem] leading-65 font-bold">
                            {blok.titre_zoom}
                        </h2>
                    )
                }
                {
                    blok.sous_titre_zoom && (
                        <p class="font-schoolbell mt-10 inline-block rotate-2 text-[4.4rem] text-(--zoom-title-color)">
                            {blok.sous_titre_zoom}
                        </p>
                    )
                }
            </div>
            <div class="px-gutter w-4/10 pt-70">
                {
                    blok.description_zoom && (
                        <div class="text-[2.8rem]leading-34 font-medium">
                            {blok.description_zoom}
                        </div>
                    )
                }
                {
                    blok.lien_zoom && blok.lien_zoom[0] && (
                        <Link
                            class="mt-30 inline-block text-[1.8rem] leading-22 font-semibold uppercase"
                            blok={blok.lien_zoom[0]}
                        />
                    )
                }
            </div>
        </div>
        <div class="-mt-70 flex w-full items-end">
            {
                blok.image_1_zoom && (
                    <div class="h-450 w-6/10 shrink-0 px-40">
                        <SBImage
                            class="size-full rotate-2 border-2 border-black object-cover"
                            image={blok.image_1_zoom}
                        />
                    </div>
                )
            }
            {
                blok.image_2_zoom && (
                    <div class="px-gutter ml-[-10%] h-390 w-5/10 shrink-0">
                        <SBImage
                            class="mt-60 size-full -rotate-2 border-2 border-black object-cover"
                            image={blok.image_2_zoom}
                        />
                    </div>
                )
            }
        </div>
    </div>
</div>
